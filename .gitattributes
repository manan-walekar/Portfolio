# Auto detect text files and normalize line endings to LF
* text=auto

# JavaScript, TypeScript, JSON
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.jsonc text eol=lf

# CSS/Styling
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.sass text eol=lf

# HTML/Templates
*.html text eol=lf
*.htm text eol=lf

# Markdown
*.md text eol=lf
*.mdx text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
*.config.* text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.svg binary
*.ico binary

# Git/GitHub
.gitignore merge=union
